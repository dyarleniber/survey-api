{
    "env": {
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 13,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "ignorePatterns": ["jest.config.js"],
    "rules": {
        "import/extensions": "off",
        "import/prefer-default-export": "off",
        "class-methods-use-this": "off",
        "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }]
    }
}
